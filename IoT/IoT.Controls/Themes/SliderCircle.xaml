<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IoT.Controls">

    <Style TargetType="local:SliderCircle" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:SliderCircle">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid Background="#1D1D1D">
                            <Path Fill="#3F3F3F">
                                <Path.Data>
                                    <GeometryGroup FillRule="Nonzero">
                                        <EllipseGeometry Center="0,0" RadiusX="60" RadiusY="60" />
                                        <EllipseGeometry Center="0,0" RadiusX="40" RadiusY="40"/>

                                        <RectangleGeometry Rect="0,0,70,70"/>
                                    </GeometryGroup>
                                </Path.Data>
                                <Path.RenderTransform>
                                    <TranslateTransform X="70" Y="70"/>
                                </Path.RenderTransform>
                            </Path>
                        </Grid>

                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
