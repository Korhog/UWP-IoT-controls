<Page
    x:Class="IoT.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IoT"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:iot="using:IoT.Controls"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <iot:SliderCircle Width="250" Height="250" Background="#1d1d1d" HorizontalAlignment="Left" Margin="10"/>
            <Slider x:Name="value" Maximum="100" Minimum="0"/>
            <Slider x:Name="angle" Maximum="360" Minimum="0"/>            
        </StackPanel>
    </Grid>
</Page>
